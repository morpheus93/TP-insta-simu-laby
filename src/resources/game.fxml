<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="userInterface.GameInterface">
    <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <HBox maxHeight="300.0" maxWidth="800.0" minHeight="300.0" minWidth="800.0">
            <Canvas fx:id="canvas1" height="300" width="400">
                <HBox.margin>
                    <Insets top="10.0"/>
                </HBox.margin>
            </Canvas>
            <LineChart fx:id="statsContainer" prefHeight="300" prefWidth="400">
                <xAxis>
                    <CategoryAxis label="Bottom" side="BOTTOM"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Left" side="LEFT">
                        <padding>
                            <Insets top="10.0"/>
                        </padding>
                    </NumberAxis>
                </yAxis>
            </LineChart>
        </HBox>
        <HBox maxHeight="300.0" maxWidth="800.0" minHeight="300.0" minWidth="800.0">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0"/>
            </padding>
            <Canvas fx:id="canvas2" height="300" width="400">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Canvas>
            <ListView fx:id="logContainer" maxHeight="300" maxWidth="400" minHeight="290.0" minWidth="390.0"
                      HBox.hgrow="ALWAYS">
                <cursor>
                    <Cursor fx:constant="MOVE"/>
                </cursor>
                <HBox.margin>
                    <Insets bottom="10.0" right="10.0"/>
                </HBox.margin>
                <padding>
                    <Insets bottom="10.0"/>
                </padding>
            </ListView>
        </HBox>
    </VBox>
</AnchorPane>
