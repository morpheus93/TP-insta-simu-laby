<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="userInterface.GameInterface">
    <children>
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <HBox maxHeight="265.0" maxWidth="800.0" minHeight="265.0" minWidth="800.0">
                    <children>
                        <Canvas fx:id="canvas1" height="255.0" width="380.0">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </Canvas>
                        <LineChart fx:id="statsContainer" prefHeight="250.0" prefWidth="400">
                            <xAxis>
                                <CategoryAxis label="Bottom" side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Left" side="LEFT">
                                    <padding>
                                        <Insets top="10.0"/>
                                    </padding>
                                </NumberAxis>
                            </yAxis>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </LineChart>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </HBox>
                <HBox maxHeight="265.0" maxWidth="800.0" minHeight="265.0" minWidth="800.0">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                    <children>
                        <Canvas fx:id="canvas2" height="255.0" width="380.0">
                            <HBox.margin>
                                <Insets left="10.0" top="10.0"/>
                            </HBox.margin>
                        </Canvas>
                        <ListView fx:id="logContainer" maxHeight="275.0" maxWidth="400" minHeight="250.0"
                                  minWidth="400.0" HBox.hgrow="ALWAYS">
                            <cursor>
                                <Cursor fx:constant="MOVE"/>
                            </cursor>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                            <padding>
                                <Insets bottom="10.0"/>
                            </padding>
                        </ListView>
                    </children>
                </HBox>
                <HBox maxHeight="30.0" maxWidth="800.0" minHeight="30.0" minWidth="800.0">
                    <VBox.margin>
                        <Insets bottom="22.0"/>
                    </VBox.margin>
                    <Button fx:id="quit_btn" mnemonicParsing="false" onAction="#quitGame" text="Quitter"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
